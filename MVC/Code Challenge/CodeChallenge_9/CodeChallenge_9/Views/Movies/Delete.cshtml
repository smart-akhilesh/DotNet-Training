@model CodeChallenge_9.Models.Movie

@{
    ViewBag.Title = "Delete Movie";
}

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>

<div>
    <p><strong>Movie Name:</strong> @Model.MovieName</p>
    <p><strong>Director:</strong> @Model.DirectorName</p>
    <p><strong>Release Date:</strong> @Model.DateOfRelease.ToShortDateString()</p>
</div>

@using (Html.BeginForm("Delete", "Movies", new { id = Model.Mid }, FormMethod.Post))
{
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary", style = "margin-left:10px;" })
}
