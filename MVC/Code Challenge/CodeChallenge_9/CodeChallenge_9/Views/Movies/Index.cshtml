@model IEnumerable<CodeChallenge_9.Models.Movie>

@{
    ViewBag.Title = "Movies List";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New Movie", "Create")
</p>

@using (Html.BeginForm("ByDirector", "Movies", FormMethod.Get))
{
    <p>
        <label for="name">Director Name:</label>
        @Html.TextBox("name", "", new { @class = "form-control", placeholder = "Enter director name" })
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
}


<!-- Search by Year -->
@using (Html.BeginForm("ByYear", "Movies", FormMethod.Get))
{
    <p>
        <label for="year">Year:</label>
        @Html.TextBox("year", "", new { @class = "form-control", placeholder = "Enter year" })
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.MovieName)</th>
            <th>@Html.DisplayNameFor(m => m.DirectorName)</th>
            <th>@Html.DisplayNameFor(m => m.DateOfRelease)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MovieName</td>
                <td>@item.DirectorName</td>
                <td>@item.DateOfRelease.ToShortDateString()</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Mid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Mid })
                </td>
            </tr>
        }
    </tbody>
</table>
