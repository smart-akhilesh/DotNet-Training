@model CodeChallenge_9.Customer

@{
    ViewBag.Title = "Customer By Order";
}

<h2>Customer Details (OrderID = 10248)</h2>

@if (Model != null)
{
    <table border="1" cellpadding="5">
        <tr>
            <th>Customer ID</th>
            <td>@Model.CustomerID</td>
        </tr>
        <tr>
            <th>Company Name</th>
            <td>@Model.CompanyName</td>
        </tr>
        <tr>
            <th>Contact Name</th>
            <td>@Model.ContactName</td>
        </tr>
        <tr>
            <th>Contact Title</th>
            <td>@Model.ContactTitle</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Region</th>
            <td>@Model.Region</td>
        </tr>
        <tr>
            <th>Postal Code</th>
            <td>@Model.PostalCode</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Fax</th>
            <td>@Model.Fax</td>
        </tr>
    </table>
}
else
{
    <p>No customer found for this order.</p>
}
