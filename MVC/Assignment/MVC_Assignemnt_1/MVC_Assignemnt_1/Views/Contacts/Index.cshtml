@model IEnumerable<MVC_Assignemnt_1.Models.Contact>

<h2>Contacts List</h2>

<p>
    @Html.ActionLink("Create New Contact", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.Email</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = contact.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="text-align:center">No contacts found.</td>
            </tr>
        }
    </tbody>
</table>
